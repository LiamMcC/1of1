<%- include('../partials/header') -%>


<!-- Main -->
<section class="wrapper style1">
    <div class="container">
        <div id="content">

            <!-- Content -->

                <article>
                    <header>
                        <h2>Admin Area, Welcome <%= user.userName %></h2>
                        <p>Remember To Log Out</p>
                        <p><a href="/administration">&LeftArrow; Back To Admin</a></p>
                    </header>

                    

                    <h3>Here are your research options</h3>

                    <table>
                        <tr>
                          <th>Id</th>
                          <th>Title</th>
                          <th>Author</th>
                          <th>Edit</th>
                          <th>Delete</th>
                         
                         
                        </tr>
                        <% result.forEach(function(iContent) { %>
                        <tr>
                          <td><%= iContent.Id %></td>
                          <td><%= iContent.title %></td>
                          <td><%= iContent.author %></td>
                          <td><a href="/admineditresearch/<%= iContent.Id %>" >Go!</a></td>
                          <td><a href="/admindeletthisresearch/<%= iContent.Id %>" data-confirm="true">Delete!</a></td>

                         
                        </tr>
                        <% }); %>
                       
                  
                      </table>

                      <a href="/adminaddresearch" >Write A New Research Topic</a>
                </article>

        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
      // Attach a click event handler to the "Delete" links
      $('a[data-confirm]').on('click', function(e) {
        // Prevent the default link action
        e.preventDefault();
  
        // Get the URL from the link's href attribute
        var url = $(this).attr('href');
  
        // Display a confirmation dialog
        if (confirm('Are you sure you want to delete this researcharticle?')) {
          // If the user confirms, redirect to the delete URL
          window.location.href = url;
        }
      });
    });
  </script>

