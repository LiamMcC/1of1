<%- include('../partials/header') -%>


<!-- Main -->
<section class="wrapper style1">
    <div class="container">
        <div id="content">

            <!-- Content -->

                <article>
                    <header>
                        <h2>All <%= user.userName %>'s Offers</h2>
                        <p>Any offers made on your inventions are here</p>
                        <p>You can contact the person that made the offer through the messages section in your profile.</p>
                        <p><a href="/profile">&LeftArrow; Back To Profile</a></p>
                    </header>

                    

                    <h3>Here are your offers</h3>

                    <table>
                        <tr>
                          <th>Offer From</th>
                          <th>Invention Title</th>
                          <th>Offer Vlue</th>
                          <th>Date Offered</th>
                          
                         
                         
                        </tr>
                        <% result.forEach(function(iContent) { %>
                        <tr>
                          <td><%= iContent.offerfrom %></td>
                          <td><%= iContent.iTitle %></td>
                          <td>&euro;<%= iContent.offerValue %></a></td>
                          <% 
  const date = new Date(iContent.dateOffered);
  const options = { day: '2-digit', month: '2-digit', year: 'numeric' };
  const formattedDate = date.toLocaleDateString('en-GB', options);
%>
                          <td><%= formattedDate %></td>

                         
                        </tr>
                        <% }); %>
                       
                  
                      </table>

                      
                </article>

        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
      // Attach a click event handler to the "Delete" links
      $('a[data-confirm]').on('click', function(e) {
        // Prevent the default link action
        e.preventDefault();
  
        // Get the URL from the link's href attribute
        var url = $(this).attr('href');
  
        // Display a confirmation dialog
        if (confirm('Are you sure you want to delete this blog post?')) {
          // If the user confirms, redirect to the delete URL
          window.location.href = url;
        }
      });
    });
  </script>

