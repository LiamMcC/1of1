<%- include('../partials/header') -%>


<!-- Main -->
<section class="wrapper style1">
    <div class="container">
        <div id="content">

            <!-- Content -->

                <article>
                    <header>
                        <h2>Admin Area, Welcome <%= user.userName %></h2>
                        <p>Remember To Log Out</p>
                        <p><a href="/administration">&LeftArrow; Back To Admin</a></p>
                    </header>

                    

                    <h3>Here are your site content options</h3>

                    <table>
                        <tr>
                          <th>Section</th>
                          <th>Location</th>
                          <th>Edit</th>
                        
                         
                         
                        </tr>
                        <% result.forEach(function(wContent) { %>
                        <tr>
                          <td><%= wContent.title %></td>
                          <td><%= wContent.location %></td>
                          
                          <td><a href="/admineditcontent/<%= wContent.webContent_id %>" >Edit!</a></td>
                        
                         
                        </tr>
                        <% }); %>
                     
                  
                      </table>

                  
                </article>

        </div>
    </div>
</section>



<%- include('../partials/footer') -%>