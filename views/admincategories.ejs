<%- include('../partials/header') -%>

				

						<!-- Main -->
                        <section class="wrapper style1">
                            <div class="container">
                                <div class="row gtr-200">
                                    <div class="col-8 col-12-narrower">
                                        <div id="content">
        
                                            <!-- Content -->
        
                                            <article>
                                                <header>
                                                    <h2>Admin Area, Welcome <%= user.userName %></h2>
                                                    <p>Remember To Log Out</p>
                                                    <p><a href="/administration">&LeftArrow; Back To Admin</a></p>
                                                </header>
                            
                                                
                            
                                                <h3>Here are your options for categories</h3>
                            
                                                <table>
                                                    <tr>
                                                      <th>Id</th>
                                                      <th>Title</th>
                                                      <th>Edit</th>
                                                      <th>Delete</th>
                                                     
                                                     
                                                    </tr>
                                                    <% result.forEach(function(iContent) { %>
                                                    <tr>
                                                      <td><%= iContent.cat_id %></td>
                                                      <td><%= iContent.title %></td>
                                                      <td><a href="/admineditcategory/<%= iContent.cat_id %>" >Go!</a></td>
                                                      <td><a href="/admindeletthiscategory/<%= iContent.cat_id %>" data-confirm="true">Delete!</a></td>
                            
                                                     
                                                    </tr>
                                                    <% }); %>
                                                   
                                              
                                                  </table>
                                                  <script>
                                                    $(document).ready(function() {
                                                      // Attach a click event handler to the "Delete" links
                                                      $('a[data-confirm]').on('click', function(e) {
                                                        // Prevent the default link action
                                                        e.preventDefault();
                                                  
                                                        // Get the URL from the link's href attribute
                                                        var url = $(this).attr('href');
                                                  
                                                        // Display a confirmation dialog
                                                        if (confirm('Are you sure you want to delete this category?')) {
                                                          // If the user confirms, redirect to the delete URL
                                                          window.location.href = url;
                                                        }
                                                      });
                                                    });
                                                  </script>
                                                  
                                            </article>

                                                <article>
                                                    <header>
                                                      <br>
                                                      <br>
                                                        <h3>Add a new category here</h3>
                                                    </header>

                                                    <form action="/adminaddcategories" method="post">
                                                        <div class="row gtr-50">

                                                            <div class="col-12 col-12-mobilep">
                                                                <P style="margin-bottom: 0px;">Title</P>
                                                                <input name="title" type="text" placeholder="Title" required>
                                                                
                                                                
                                                            </div>


                                                            
                                                            <div class="col-12">
                                                                <P style="margin-bottom: 0px;">Content</P>
                                                                <textarea name="catblurb" rows="5"  id="message" required>Category Small Description</textarea>
                                                            </div>

                                                            
                                                            <div class="col-12">
                                                                <ul class="actions">
                                                                  <li><input type="submit" class="button" value="Add This Category" /></li>
                                                                </ul>
                                                              </div>
                                                              
                                                        </div>
                                                    </form>
                                                </article>
        
                                        </div>
                                    </div>
                                    <div class="col-4 col-12-narrower">
                                        <div id="sidebar">
        
